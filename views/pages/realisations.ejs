<section class="section top-offset">
  <div class="container">
    <h1>Réalisations</h1>
    <div class="grid cols-3">
      <% realisations.forEach((item) => { %>
      <article class="card">
        <div class="card-media">
          <% if (item.image) { %>
          <img src="<%= item.image %>" alt="<%= item.title %>" />
          <% } else { %>
          <div class="card-media-placeholder">Image réalisation</div>
          <% } %>
        </div>
        <h3><%= item.title %></h3>
        <p><%= item.description %></p>
        <small class="muted"><%= item.location %> - <%= item.eventDate || "" %></small>
        <p>Audience: <%= item.audience || "-" %></p>
      </article>
      <% }) %>
    </div>
  </div>
</section>
